{
  "name": "api-patients",
  "version": "0.0.1",
  "description": "An api for ipps patient data",
  "main": "dist",
  "author": "Egor Kirpichev <egor.kirpichev@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s --copy-files --out-dir dist --presets es2015,stage-0",
    "prestart": "yarn -s build",
    "start": "NODE_ENV=production pm2 start dist",
    "lint": "eslint src && prettier --list-different \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.js\"",
    "deploy": "yarn run build && now"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_doc"
          ]
        }
      ],
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "pm2": "^3.2.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3"
  }
}
